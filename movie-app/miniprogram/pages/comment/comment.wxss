.background-img{
  position: absolute;
  top: 0;
  left: 0;
  height: 500rpx;
  width: 100%;
  filter: blur(40rpx);
  opacity: 0.4;
}
.background-black{
  width: 100%;
  height: 500rpx;
  position: absolute;
  top: 0;
  left: 0;
  background: #333;
  z-index: -1;
}
.detail{
  width: 100%;
  height: 500rpx;
  display: flex;
}
.detail-image{
  width: 350rpx;
  height: 100%;
}
.detail-img{
  width: 300rpx;
  height: 450rpx;
  padding: 20rpx;
}
.detail-details{
  flex: 1;
  color: #fff;
}
.detail-title{
  padding-top: 25rpx;
  color: #fff;
  font-size: 40rpx;
  font-weight: bolder;
}
.detail-rating{
  color: #faaf00;
}
.detail-type{
  overflow:hidden;
  text-overflow:ellipsis;
  display:-webkit-box;
  -webkit-line-clamp:2;
  -webkit-box-orient:vertical;
}
.detail-actor{
  overflow:hidden;
  text-overflow:ellipsis;
  display:-webkit-box;
  -webkit-line-clamp:3;
  -webkit-box-orient:vertical;
}
.detail-summary{
  margin-top: 25rpx;
}
.detail-summary-detail{
  padding: 25rpx;
}
.git{
  width: 100%;
  margin: 0;
  padding: 0;
  background: #E54847;
  color: #fff;
}
.gitImg{
  width: 100%;
}
.img{
  width: 200rpx;
  height: 300rpx;
  margin: 20rpx;
}
.submit button:not([size='mini']){
  width:100%;
}